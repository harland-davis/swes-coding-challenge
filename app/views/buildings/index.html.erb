<p id="notice"><%= notice %></p>

<h1>All Buildings</h1>
<br/>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Address</th>
      <th>Rent per floor</th>
      <th>Number of floors</th>
      <th colspan="6">Available Floor Numbers</th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.country %></td>
        <td><%= building.address %></td>
        <td><%= "$" + building.rent_per_floor %></td>
        <td><%= building.number_of_floors %></td>
        <% building.offices.each do |offices| %>
        <td><%= offices.floor if offices.company.name == "Vacant Floor" %></td>
        <% end %>
        <td colspan="6"><%= link_to 'Show Building', building %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


